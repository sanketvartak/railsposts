
 
<h3> Add comment </h3>

<%= form_for([@post, @post.comments.build]) do |f| %>
   <p>
   <%= f.label :username %><br>
   <%= f.text_field(:username, {:class => 'form-control'}) %>
   </p>
   <p>  
        <%= f.number_field :user_id, id: :comments_user_id,class:'form-control',value: current_user.id, type: :hidden %>
</p>
   <p>
   <%= f.label :body %><br>
   <%= f.text_field(:body, {:class => 'form-control'}) %>
   </p>
   <p>
   <%= f.submit({:class => 'btn btn-success navbar-btn btn-sm'}) %> 
   </p>
<% end %>
 